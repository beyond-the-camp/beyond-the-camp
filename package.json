{
  "name": "beyond-the-camp",
  "description": "Beyond the Camp",
  "version": "0.0.1",
  "author": "Hentie Louw <hentie.louw@gmail.com>",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "clean": "rimraf .cache public",
    "develop": "yarn run clean && gatsby develop",
    "build": "yarn run clean && gatsby build",
    "serve": "gatsby serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "bulma": "^0.7.2",
    "gatsby": "^2.0.75",
    "gatsby-image": "^2.0.25",
    "gatsby-plugin-react-helmet": "^3.0.5",
    "gatsby-plugin-react-leaflet": "2.0.1",
    "gatsby-plugin-sass": "^2.0.7",
    "gatsby-plugin-sharp": "^2.0.16",
    "gatsby-plugin-typescript": "^2.0.3",
    "gatsby-source-filesystem": "^2.0.12",
    "gatsby-source-wordpress": "^3.0.21",
    "gatsby-transformer-remark": "^2.1.17",
    "gatsby-transformer-sharp": "^2.1.9",
    "leaflet": "^1.3.4",
    "node-sass": "^4.11.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-helmet": "^5.2.0",
    "react-leaflet": "^2.1.4",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.18",
    "@types/react-helmet": "^5.0.7",
    "@types/react-leaflet": "^1.1.6",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react-testing-library": "^5.4.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "src/**/*.{ts,tsx,js,json}": [
        "prettier --write",
        "git add"
      ],
      "src/**/*.{ts,tsx}": [
        "tslint --fix",
        "git add"
      ]
    }
  }
}
