{
  "name": "beyond-the-camp",
  "description": "Beyond the Camp",
  "version": "0.0.1",
  "author": "Hentie Louw <hentie.louw@gmail.com>",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "clean": "rimraf .cache public",
    "start": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint --ignore-path .gitignore . --ext js --ext jsx --ext ts --ext tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "gatsby": "^2.4.6",
    "gatsby-image": "^2.0.41",
    "gatsby-plugin-netlify": "^2.0.17",
    "gatsby-plugin-netlify-cms": "^4.0.1",
    "gatsby-plugin-postcss": "^2.0.7",
    "gatsby-plugin-purgecss": "^4.0.0",
    "gatsby-plugin-react-helmet": "^3.0.12",
    "gatsby-plugin-react-leaflet": "2.0.8",
    "gatsby-plugin-sharp": "^2.0.36",
    "gatsby-plugin-typescript": "^2.0.13",
    "gatsby-remark-copy-linked-files": "^2.0.12",
    "gatsby-remark-images": "^3.0.11",
    "gatsby-remark-relative-images": "^0.2.2",
    "gatsby-source-filesystem": "^2.0.33",
    "gatsby-transformer-remark": "^2.3.12",
    "gatsby-transformer-sharp": "^2.1.19",
    "leaflet": "^1.5.1",
    "netlify-cms-app": "^2.9.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-intl": "^2.8.0",
    "react-leaflet": "^2.2.1",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@types/jest": "24.0.13",
    "@types/react": "16.8.19",
    "@types/react-helmet": "5.0.8",
    "@types/react-intl": "2.3.17",
    "@types/react-leaflet": "2.2.1",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "@typescript-eslint/parser": "1.9.0",
    "autoprefixer": "9.6.0",
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-react": "7.13.0",
    "gatsby-plugin-eslint": "2.0.5",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "lint-staged": "8.1.7",
    "postcss-import": "12.0.1",
    "postcss-preset-env": "6.6.0",
    "prettier": "1.17.1",
    "react-testing-library": "8.0.1",
    "rimraf": "2.6.3",
    "tailwindcss": "1.0.3",
    "ts-jest": "24.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "src/**/*.{ts,tsx,js,json}": [
        "prettier --write",
        "git add"
      ],
      "src/**/*.{ts,tsx,js,jsx}": [
        "eslint --ignore-path .gitignore --ext ts --ext tsx --ext js --ext jsx --fix",
        "git add"
      ]
    }
  }
}
