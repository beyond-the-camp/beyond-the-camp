{
  "name": "beyond-the-camp",
  "description": "Beyond the Camp",
  "version": "0.0.1",
  "author": "Hentie Louw <hentie.louw@gmail.com>",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "develop": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "docz:dev": "docz dev",
    "docz:build": "docz build"
  },
  "dependencies": {
    "emotion": "^9.2.10",
    "emotion-server": "^9.2.10",
    "gatsby": "^2.0.7",
    "gatsby-plugin-emotion": "^2.0.5",
    "gatsby-plugin-react-helmet": "^3.0.0",
    "gatsby-plugin-typescript": "^2.0.0",
    "gatsby-plugin-typography": "^2.2.0",
    "gatsby-source-datocms": "next",
    "gatsby-source-filesystem": "^2.0.1",
    "gatsby-transformer-remark": "^2.1.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-emotion": "^9.2.10",
    "react-helmet": "^5.2.0",
    "react-typography": "^0.16.13",
    "typescript": "^3.1.1",
    "typography": "^0.16.17",
    "typography-theme-fairy-gates": "^0.15.11"
  },
  "devDependencies": {
    "@babel/core": "7.1.0",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "docz": "latest",
    "husky": "^1.0.1",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "react-testing-library": "^5.1.0",
    "ts-jest": "^23.10.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "src/**/*.{ts,tsx,js,json}": [
        "prettier --write",
        "git add"
      ],
      "src/**/*.{ts,tsx}": [
        "tslint --fix",
        "git add"
      ]
    }
  }
}
